<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% @questions.each do |question| %>
    <div class="questions" data-id="<%= question.id %>">
      <div class="questions__stats">
        <div class="questions__votes">
          <div class="questions__mini_counts">
            <span><%= question.votes.size %></span>
          </div>
          <div>Votes</div>
        </div>
        <div class="questions__answers">
          <div class="questions__mini_counts">
            <span><%= question.answers.size %></span>
          </div>
          <div>Jawaban</div>
        </div>
      </div>
      <div class="questions__summary">
        <h3>
          <%= link_to question.title, question, class: "questions__hyperlink" %>
        </h3>
        <div class="questions__infos">
        <div class="questions__actions">
          <%= link_to "<span class='glyphicon glyphicon-eye-open'></span> Lihat"
                  .html_safe,
                  question %>
          <% if logged_in? && question.user == current_user %>
          <span> | </span>
          <%= link_to " <span class='glyphicon glyphicon-pencil'></span> Sunting"
                    .html_safe,
                    edit_question_path(question) %>
          <span> | </span>
          <%= link_to " <span class='glyphicon glyphicon-trash'></span> Hapus"
                    .html_safe, question,
                    method: :delete,
                    data: { confirm: "Apakah Anda yakin Anda menghapus pertanyaan ini?" } %>
          <% end %>
        </div>
        <div class="questions__started">
          dibuat <%= time_ago_in_words question.created_at %> lalu
          oleh <%= mail_to question.user.name %></a>
        </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>